<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/quantum_yellow"
                android:endColor="@color/quantum_yellow900"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/quantum_grey" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/quantum_orange900"
                android:startColor="@color/quantum_orange200"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/quantum_greyblack1000" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/quantum_bluegrey50"
                android:startColor="@color/quantum_bluegrey950"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/quantum_grey800" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
